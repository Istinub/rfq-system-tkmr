# Backend environment configuration
# Copy this file to `.env` when running locally. Render dashboard variables will override these.

NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-frontend-domain.onrender.com
# Comma-separated list of origins allowed to call the API
CORS_ORIGINS=https://your-frontend-domain.onrender.com
# Minutes before secure links expire (7 days = 10080 minutes)
SECURE_LINK_TTL_MINUTES=10080
