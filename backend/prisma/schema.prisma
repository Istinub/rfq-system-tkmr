generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}


model RFQ {
  id           String       @id @default(cuid())
  company      String
  contactName  String
  contactEmail String
  contactPhone String?
  createdAt    DateTime     @default(now())

  items        RFQItem[]
  attachments  Attachment[]
  secureLinks  SecureLink[]
}

model RFQItem {
  id      String @id @default(cuid())
  rfqId   String
  name    String
  quantity Int
  details String?

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
}

model Attachment {
  id       String @id @default(cuid())
  rfqId    String
  fileName String
  fileUrl  String
  fileSize Int?

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
}

model SecureLink {
  id           String   @id @default(cuid())
  token        String   @unique
  rfqId        String
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  firstAccessAt DateTime?
  oneTime      Boolean  @default(false)
  accessCount  Int      @default(0)
  lastAccessIP String?

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
}
