generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}


model RFQ {
  id           String       @id @default(cuid())
  company      String
  contactName  String
  contactEmail String
  contactPhone String?
  createdAt    DateTime     @default(now())

  items        RFQItem[]
  attachments  Attachment[]
  secureLinks  SecureLink[]
  accessLogs   SecureLinkAccessLog[]
}

model RFQItem {
  id      String @id @default(cuid())
  rfqId   String
  name    String
  quantity Int
  details String?

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
}

model Attachment {
  id       String @id @default(cuid())
  rfqId    String
  fileName String
  fileUrl  String
  fileSize Int?

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
}

model SecureLink {
  id           String   @id @default(cuid())
  token        String   @unique
  rfqId        String
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  firstAccessAt DateTime?
  oneTime      Boolean  @default(false)
  accessCount  Int      @default(0)
  lastAccessIP String?
  disabled     Boolean  @default(false)

  rfq RFQ @relation(fields: [rfqId], references: [id], onDelete: Cascade)
  logs SecureLinkAccessLog[]
}

model SecureLinkAccessLog {
  id          String         @id @default(cuid())
  secureLinkId String?
  rfqId       String?
  token       String
  result      AccessResult
  ip          String?
  userAgent   String?
  createdAt   DateTime       @default(now())

  secureLink  SecureLink?    @relation(fields: [secureLinkId], references: [id], onDelete: SetNull)
  rfq         RFQ?           @relation(fields: [rfqId], references: [id], onDelete: SetNull)
}

model AdminSetting {
  id                String   @id @default("default")
  tokenExpiryDays   Int      @default(7)
  oneTimeAccess     Boolean  @default(false)
  rateLimitPerMinute Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum AccessResult {
  success
  expired
  disabled
}
